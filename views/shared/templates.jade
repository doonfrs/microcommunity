script#activity-template(type="text/template")
	.row-fluid
		.span12
			.avatar
				a(href="#")
					<img class="avatar-img" src="<%= $.gravatar(actor.email, { size: 50 }) %>" />
			.mainWrapper
				p
					<%= message %>
				p
					small
						a(href='#') Like 
						· <%= moment(created_at).fromNow() %>					
				.row-fluid
					.embeded-content
	.row-fluid
		.span12
			hr

script#post-template(type="text/template")
	.row-fluid
		.span12
			.avatar
				a(href="#")
					<img class="avatar-img" src="<%= $.gravatar(user.email, { size: 50 }) %>" />
			.mainWrapper
				p
					a(href="/posts/206")     			
						<%= user.email %>
				p
					<%= nl2br(text, false) %>
				p
					small
						a(href='#') Like 
						· <%= moment(created_at).fromNow() %>
				.row-fluid
					.comments-thread
	.row-fluid.separator
		.span12
			hr
			
script#comment-template(type="text/template")
	.row-fluid
		.avatar
			a(href="#")
				<img class="avatar-img" src="<%= $.gravatar(user.email, { size: 50 }) %>" />
		.mainWrapper.comments
			p
				a(href="#") <%= user.email %> 
				<%= text %>
				br
				small
					<%= moment(created_at).fromNow() %>
						
script#comments-thread-template(type="text/template")
	.row-fluid
		.comments-list
		textarea.span12.comments-text(rows=1)
	
script#activity-stream-template(type="text/template")
	#activity-stream-table
	.row-fluid
		a.btn.span12#load-more Load
	hr

script#wikipage-template(type="text/template")
	.row-fluid
		.span12
			.well
				.row-fluid
					.span8
						h3 <%= title %>
					.span4#buttons
				.row-fluid#wikipage-body-area
				.row-fluid
					p
						small
							a#expand(href="#") Expand 
							· 
							a#collapse(href="#") Collapse
	.row-fluid.separator
		.span12
			hr
             
script#wikipage-edit-buttons-template(type="text/template")
	.pull-right
		a(href="#")
			span#edit-button.label.label-info Edit
	
script#wikipage-save-buttons(type="text/template")
	.pull-right
		a(href="#")
			span#save-button.label.label-success Save
		a(href="#")
			span#save-button.label.label-important Cancel
			
script#wikipage-body-view(type="text/template")
	<% if((typeof fullview)=="undefined") {var fullview = false;} %>
	<% if(body.length < 250 || fullview) {%>
	p <%= nl2br(body, false) %>
	<% } else { %>
	p 
		<%= nl2br(body.substring(0, 250), false) %>...
	<% }%>
	
script#wikipage-body-edit(type="text/template")
	input.span12#wikipage-title(type="text", placeholder="Give a description of your edit (optional)")
	textarea#wikipage-body.span12(rows=6) <%= body %>

