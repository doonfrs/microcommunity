#social-stream
	script#post-template(type="text/template")
		<div class="well">
		<div class="row-fluid">
		<div class="span2">
		<p><a href="/profiles/1"><img width="50" src="http://gravatar.com/avatar/a2ef1d09ea1c872b8174b618b6eabcd1.png"></a></p>
		</div>
		<div class="span10">
		<p><a data-remote="true" class="remote-wikipage-link" href="/posts/206"><%= name %></a> posted</p>
		<p><%= text %></p>
		</div>
		</div>
		<hr />
		<div class="comments-thread"></div>
		</div>

	script#comment-template(type="text/template")
		<div class="row-fluid">
		<div class="span2">
		<p><a href="/profiles/1"><img width="50" src="http://gravatar.com/avatar/a2ef1d09ea1c872b8174b618b6eabcd1.png"></a></p>
		</div>
		<div class="span10">
		<a href="/posts/206"><%= name %></a><br />
		<p><%= text %></p>
		</div>
		</div>

	script#comments-thread-template(type="text/template")
		<div class="row-fluid comments-list">
		</div>
		<div class="row-fluid">
		<textarea class="span12 comments-text" rows=1 style="line-height:80%;"></textarea>
		</div>

	script#social-stream-template(type="text/template")
		<div id ="social-stream-table">
		</div>

	script#question-template(type="text/template")
		<div class="well">
		<div class="row-fluid">
		<div class="span12">
		<h3><%= title %> </h3>
		</div>
		</div>
		<div class="row-fluid">
		<div class="span12"><%= body %> </div>
		<div class="span12 ">
		<div class="pull-right ">
		<p><a href="/profiles/1"><img width="20" src="http://gravatar.com/avatar/a2ef1d09ea1c872b8174b618b6eabcd1.png"></a> asked by <%= name %></p>
		</div>
		</div>

		</div>
		</div>

	script#wikipage-template(type="text/template")
		<div class="well">
		<div class="row-fluid">
		<div class="span8">
		<h3><%= title %> </h3>
		</div>
		<div class="span4" id="buttons"></div>
		</div>
		<div class="row-fluid" id="wikipage-body-area"></div>
		</div>
		</div>

	script#wikipage-edit-button-template(type="text/template")
		<a href="#"><span id="edit-button" class="label label-info pull-right">Edit</span></a>

	script#wikipage-save-buttons(type="text/template")
		<a href="#"> <div class="pull-right"><span id="save-button" class="label label-success" >Save</span></a>
		<a href="#"> <span id="cancel-button" class="label label-important">Cancel</span></a>

	script#wikipage-body-view(type="text/template")
		<% if((typeof fullview)=="undefined") {var fullview = false;} %>
		<% if(body.length < 500 || fullview) {%>
		<p><%= nl2br(body, false) %></p>
		<% } else { %>
		<p><%= nl2br(body.substring(0, 500), false) %>... <a href="#" id="read-more">read more</a></p>
		<% }%>

	script#wikipage-body-edit(type="text/template")
		<textarea id="wikipage-body" class="span12" rows= 6><%= body %></textarea>


	script#link-template-thumbnail(type="text/template")
		<div class="well">
		<div class="row-fluid">
		<div class="span2">
		<p><a href="/profiles/1"><img width="50" src="http://gravatar.com/avatar/a2ef1d09ea1c872b8174b618b6eabcd1.png"></a></p>
		</div>
		<div class="span10">
		<p><a data-remote="true" class="remote-wikipage-link" href="/posts/206"><%= name %></a> posted</p>
		<p><%= curation %></p>
		<div class="row-fluid">
		<div class="span3">
		<p><a href="#"><img src="<%= preview %>"></a></p>
		</div>
		<div class="span9">
		<a href="<%= url %>"><%= title %></a><br />
		</div>
		</div>
		</div>
		</div>
		<hr />

		</div>

	script#link-template-curated(type="text/template")
		<div class="well">
		<div class="row-fluid">
		<h3><a href="<%= url %>"><%= title %></a></h3>
		<p><img class="span12" src="<%= preview %>" style="margin-bottom:5px;"></p>
		</div>
		<div class="row-fluid">
		<div class="span12">
		<p><%= curation %></p>
		</div>
		<div class="span12 ">
		<div class="pull-right ">
		<p><a href="/profiles/1"><img width="20" src="http://gravatar.com/avatar/a2ef1d09ea1c872b8174b618b6eabcd1.png"></a> shared by Guest</p>
		</div>
		</div>
		</div>

