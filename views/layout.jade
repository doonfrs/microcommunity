!!!
html
	head
		title= title
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		!= css('lib/bootstrap.min')
		!= css('app')
		!= css('lib/bootstrap-responsive')
		link rel="apple-touch-icon-precomposed" sizes="144x144" href="http://twitter.github.com/bootstrap/assets/ico/apple-touch-icon-144-precomposed.png">
		link rel="apple-touch-icon-precomposed" sizes="114x114" href="http://twitter.github.com/bootstrap/assets/ico/apple-touch-icon-114-precomposed.png">
		link rel="apple-touch-icon-precomposed" sizes="72x72" href="http://twitter.github.com/bootstrap/assets/ico/apple-touch-icon-72-precomposed.png">
		link rel="apple-touch-icon-precomposed" href="http://twitter.github.com/bootstrap/assets/ico/apple-touch-icon-57-precomposed.png">


	body
		.navbar.navbar-fixed-top
			.navbar-inner
				.container
					a(href='#').brand #{title}
					ul.nav
						li.active
							a(href='#') Home
						li
							a(href='#') Wiki
						li
							a(href='#') Contact

		div.container
			.row
				.span12
					block content

			footer
				p MicroCommunity 2012
				p = posts

		!= js('lib/jquery.min')
		!= js('lib/bootstrap.min')
		!= js('lib/underscore-min')
		!= js('lib/backbone-min')
		!= js('lib/jquery.masonry.min')
		!= "<script type='text/javascript'>"
		!= "var posts =" + JSON.stringify(posts) + ";"
		!= "var wikipages =" + JSON.stringify(wikipages) + ";"
		!= "</script>"
		!= js('app')

