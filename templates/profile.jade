extends layout

block content	
	.row
		.span3
			include shared/sidebar
								
		.span7
			.row-fluid.page-header
				h1 
					= server.data.user.displayName
			.row-fluid
				#social-stream
				
	<script id="item-template" type="text/html">
	<tr>
	<td><%= author.displayName %></td>
	<td><%= content %> <br /><small><%= published %></small></td>
	</tr>
	</script>
	<script id="items-template" type="text/html">
	<table border=1>
	<tbody>
	</tbody>
	</table>
	</script>
	<script id="publisher-template" type="text/html">
	<textarea id='new-post'></textarea><br />
	<input id='publish-button' type='submit' />
	</script>
	<script id="layout-template" type="text/html">
	<div id='publisher'></div>
	<div id='items'></div>
	</script>	

				

